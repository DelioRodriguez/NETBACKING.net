@model NETBACKING.CORE.APPLICATION.ViewModels.DashboardViewModel

@{
ViewData["Title"] = "Dashboard";
Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&display=swap">
    <style>
        body {
            font-family: 'Roboto', sans-serif;
            background-color: #f4f7fa;
            color: #333;
        }

        .dashboard-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 30px;
        }

        .btn-logout {
            background-color: #dc3545;
            color: #ffffff;
            border-radius: 50px; /* Botón redondeado */
            padding: 10px 30px; /* Espaciado ajustado */
            font-size: 16px; /* Tamaño de fuente */
            transition: background-color 0.3s, transform 0.2s;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2); /* Sombra del botón */
        }

        .btn-logout:hover {
            background-color: #c82333;
            transform: translateY(-2px);
        }

        .dashboard-cards {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
            gap: 20px;
            margin-bottom: 40px;
        }

        .card {
            background-color: #ffffff;
            border: none;
            border-radius: 10px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
            padding: 20px;
            transition: transform 0.3s, box-shadow 0.3s;
        }

        .card:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 20px rgba(0, 0, 0, 0.15);
        }

        .card-title {
            font-size: 20px; /* Aumentar tamaño */
            color: #007A33;
            font-weight: bold;
            margin-bottom: 10px; /* Ajustar margen */
        }

        .card-content {
            font-size: 36px;
            font-weight: bold;
            color: #003366;
        }

        .btn-manage {
            background-color: #007A33;
            color: #ffffff;
            border-radius: 50px; /* Botón redondeado */
            padding: 10px 30px; /* Espaciado ajustado */
            font-size: 16px; /* Tamaño de fuente */
            transition: background-color 0.3s, transform 0.2s;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2); /* Sombra del botón */
        }

        .btn-manage:hover {
            background-color: #005f29;
            transform: translateY(-2px);
        }

        .text-center {
            margin-top: 40px;
        }

        /* Estilo del contenedor */
        .container {
            max-width: 1200px; /* Ancho máximo */
            margin: 0 auto; /* Centrado */
            padding: 20px; /* Espaciado interior */
        }
    </style>
</head>
<body>

<div class="container">
    <div class="dashboard-header">
        <h1 class="h3">Dashboard</h1>
        <a href="/Account/Logout" class="btn btn-logout">Cerrar Sesión</a>
    </div>

    <div class="dashboard-cards">
        <div class="card">
            <h5 class="card-title">Total de Transacciones</h5>
            <div class="card-content">@Model.TotalTransactions</div>
        </div>

        <div class="card">
            <h5 class="card-title">Transacciones de Hoy</h5>
            <div class="card-content">@Model.TransactionsToday</div>
        </div>

        <div class="card">
            <h5 class="card-title">Total de Pagos</h5>
            <div class="card-content">@Model.TotalPayments</div>
        </div>

        <div class="card">
            <h5 class="card-title">Pagos de Hoy</h5>
            <div class="card-content">@Model.PaymentsToday</div>
        </div>

        <div class="card">
            <h5 class="card-title">Clientes Activos</h5>
            <div class="card-content">@Model.ActiveCustomers</div>
        </div>

        <div class="card">
            <h5 class="card-title">Clientes Inactivos</h5>
            <div class="card-content">@Model.InactiveCustomers</div>
        </div>

        <div class="card">
            <h5 class="card-title">Productos Asignados</h5>
            <div class="card-content">@Model.AssignedProducts</div>
        </div>
    </div>

    <div class="text-center">
        <a href="/Admin/Users" class="btn btn-manage">Administrar Usuarios</a>
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
