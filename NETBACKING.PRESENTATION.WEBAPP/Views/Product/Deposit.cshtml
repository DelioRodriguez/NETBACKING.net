@model NETBACKING.CORE.APPLICATION.ViewModels.Products.DepositViewModel

@{
ViewData["Title"] = "Realizar Depósito";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&display=swap">
    <style>
        body {
            font-family: 'Roboto', sans-serif;
            background-color: #ffffff;
            color: #333;
            padding: 20px;
        }

        h2 {
            font-size: 28px;
            color: #003366;
            font-weight: bold;
            margin-bottom: 30px;
        }

        .form-group {
            margin-bottom: 20px;
        }

        .form-control {
            border-radius: 5px;
            border: 1px solid #ccc;
            padding: 10px;
            font-size: 16px;
        }

        .form-control:focus {
            border-color: #0975ee; /* Azul claro en el borde al enfocar */
            box-shadow: 0 0 5px rgb(9, 117, 238); /* Sombra sutil */
        }

        .btn-primary {
            background-color: #0975ee;
            border-color: #0975ee;
            padding: 12px 30px;
            font-size: 16px;
            border-radius: 50px;
            transition: background-color 0.3s, transform 0.2s;
        }

        .btn-primary:hover {
            background-color: #0975ee;
            transform: translateY(-2px);
        }

        .btn-back {
            background-color: #ffffff;
            border-color: #071931;
            color: #0975ee;
            padding: 12px 30px;
            font-size: 16px;
            border-radius: 50px;
            border: 2px solid #0975ee;
            transition: background-color 0.3s, transform 0.2s;
        }

        .btn-back:hover {
            background-color: #f0f8f2;
            transform: translateY(-2px);
        }

        .container {
            max-width: 600px;
            margin: 0 auto;
            background-color: #f4f7fa;
            padding: 30px;
            border-radius: 10px;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
        }

        .text-center {
            margin-top: 30px;
        }

        /* Estilo para mensajes de error */
        .alert-danger {
            background-color: #f8d7da;
            color: #721c24;
            border: 1px solid #f5c6cb;
            padding: 10px;
            margin-bottom: 20px;
        }
    </style>
</head>
<body>

<div class="container">
    <h2>Realizar Depósito a Cuenta de Ahorros</h2>

    <!-- Mostrar los mensajes de error si existen -->
    @if (!ViewData.ModelState.IsValid)
    {
    <div class="alert alert-danger">
        @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
        {
        <p>@error.ErrorMessage</p>
        }
    </div>
    }

    <form asp-action="Deposit" method="post">
        <div class="form-group">
            <label for="AccountNumber">Número de Cuenta:</label>
            <input asp-for="AccountNumber" class="form-control" placeholder="Ingrese el número de cuenta" required />
            <span asp-validation-for="AccountNumber" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label for="Amount">Monto a Depositar:</label>
            <input asp-for="Amount" class="form-control" type="number" min="0" step="0.01" required />
            <span asp-validation-for="Amount" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary">Depositar</button>
    </form>

    <div class="text-center">
        <a href="javascript:history.back()" class="btn btn-back">Volver Atrás</a>
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
